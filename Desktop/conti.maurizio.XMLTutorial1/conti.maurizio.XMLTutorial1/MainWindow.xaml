<Window x:Class="conti.maurizio.XMLTutorial1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:conti.maurizio.XMLTutorial1"
        mc:Ignorable="d"
        Title="posta@maurizioconti.com - XMLTutorial" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Button Content="Apri Dati.xml" Click="btnApriClick" Width="120" Margin="3" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold"/>
        </DockPanel>

        <DataGrid Grid.Row="1" Name="dgDati"></DataGrid>

        <StackPanel Grid.Row="2">
        </StackPanel>
        
    </Grid>
</Window>
