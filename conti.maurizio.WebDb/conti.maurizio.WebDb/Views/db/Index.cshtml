@using System.Data
@model DataTable

<h2>Categories</h2>

<table class="table table-hover" >

    <tr>
        <th>ID</th><th>Nome Prodotto</th><th>Descrizione</th>
    </tr>

    @foreach( DataRow item in Model.Rows )
    {
        <tr>
            <td>@item["CategoryID"]</td>
            <td>@item["CategoryName"]</td>
            <td>@item["Description"]</td>
            <td>
                @*<img src=" @{ var f = (byte[])item["Picture"]; string base64String = Convert.ToBase64String(f); String.Format("data:image/png;base64,{0}", base64string) " /> }></td>*@

        </tr>
    }

</table>
