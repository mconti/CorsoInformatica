<Window x:Class="conti.maurizio._4L.PoliFigure4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PoliFigure4" Height="350" Width="525" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" >
    <Grid>
        <ListView Name="lvFigure">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
